# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files - align with Ruff configuration
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Web files - CSS, JavaScript, HTML
[*.{css,js,html,htm,json}]
indent_style = space
indent_size = 2

# Template files (Jinja2)
[*.{jinja,jinja2,j2}]
indent_style = space
indent_size = 2

# Configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
