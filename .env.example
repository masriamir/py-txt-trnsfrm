# Flask Application Configuration
# Copy this file to .env and modify the values as needed

# Flask Environment Configuration
# Options: development, production, testing
FLASK_ENV=development

# Flask Debug Mode (only for development)
# Options: true, false, 1, 0, yes, no
FLASK_DEBUG=true

# Application Secret Key
# CRITICAL: Change this to a secure random value for production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Logging Configuration
# Options: debug, info, warning, error, critical
LOG_LEVEL=info

# Server Configuration
# Port for the Flask development server
PORT=5000

# Production Server Configuration (Gunicorn)
# Number of worker processes (auto-detected if not set)
WEB_CONCURRENCY=auto

# Heroku-specific Configuration
# These are automatically set by Heroku, but can be overridden for testing
# DYNO=web.1
# WEB_MEMORY=512M

# Cloud Platform Indicators (auto-detected)
# These are usually set by the cloud platforms themselves
# KUBERNETES_SERVICE_HOST=10.0.0.1
# K_SERVICE=py-txt-trnsfrm
# AWS_LAMBDA_FUNCTION_NAME=py-txt-trnsfrm

# Database Configuration (for future use)
# DATABASE_URL=sqlite:///app.db
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Development-only Settings
# These should not be set in production
# TESTING=false

# Production-only Settings
# These are typically set by the deployment environment
# SSL_REDIRECT=true
# PROXY_FIX=true